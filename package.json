{
  "name": "vscode-fluent",
  "displayName": "vscode-fluent",
  "description": "VS Code extension to work with Fluent, the correct-by-design i10n programming language",
  "version": "0.0.1",
  "publisher": "macabeus",
  "repository": "https://github.com/macabeus/vscode-fluent",
  "scripts": {
    "build": "npx js-yaml syntaxes/fluent.tmLanguage.yml > syntaxes/fluent.tmLanguage.json"
  },
  "engines": {
    "vscode": "^1.28.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "fluent",
        "extensions": [
          ".ftl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "fluent",
        "scopeName": "source.ftl",
        "path": "./syntaxes/fluent.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "js-yaml": "3.13.1"
  }
}
