{
  "name": "vscode-fluent",
  "displayName": "vscode-fluent",
  "description": "VS Code extension to work with Fluent, the correct-by-design i10n programming language",
  "version": "0.0.3",
  "publisher": "macabeus",
  "repository": "https://github.com/macabeus/vscode-fluent",
  "scripts": {
    "watch": "tsc -watch -p ./",
    "build-syntaxes": "npx js-yaml syntaxes/fluent.tmLanguage.yml > syntaxes/fluent.tmLanguage.json"
  },
  "engines": {
    "vscode": "^1.31.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "title": "vscode-fluent",
      "properties": {
        "vscodeFluent.replacementTemplate": {
          "type": "string",
          "default": "t('$1')",
          "description": "Template used when extracting a string with the code action 'Extract to Fluent files'. Use $1 to get the message id."
        }
      }
    },
    "languages": [
      {
        "id": "fluent",
        "extensions": [
          ".ftl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "fluent",
        "scopeName": "source.ftl",
        "path": "./syntaxes/fluent.tmLanguage.json"
      }
    ]
  },
  "dependencies": {
    "@fluent/syntax": "0.16.0",
    "path": "0.12.7"
  },
  "devDependencies": {
    "@types/node": "14.0.22",
    "@types/vscode": "^1.31.0",
    "@typescript-eslint/eslint-plugin": "3.6.1",
    "@typescript-eslint/parser": "3.6.1",
    "eslint": "7.5.0",
    "js-yaml": "3.13.1",
    "typescript": "3.9.6"
  }
}
